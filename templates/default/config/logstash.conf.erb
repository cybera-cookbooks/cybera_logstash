input {
  <% node[:logstash][:config][:input_template_partials].each do |filter| %>
  <%= render "config/inputs/#{filter}", cookbook: "cybera_logstash" %>
  <% end %>
}

filter {
  <% node[:logstash][:config][:filter_template_partials].each do |filter| %>
  <%= render "config/filters/#{filter}", cookbook: "cybera_logstash", variables: {patterns_dir: @patterns_dir} %>
  <% end %>
}

output {
  stdout {  }
  <% node[:logstash][:config][:output_template_partials].each do |filter| %>
  <%= render "config/outputs/#{filter}", cookbook: "cybera_logstash" %>
  <% end %>
}