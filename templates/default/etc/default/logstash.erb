# defaults for logstash

# Start logstash on boot?
START=yes

# pulled in from the init script; makes things easier.
NAME=logstash

# location of java
JAVA=/usr/bin/java

# arguments to pass to java
LS_JAVA_OPTS="-Xmx<%= node[:logstash][:xmx] %> -Djava.io.tmpdir=/var/lib/logstash/"

PIDFILE=/var/run/logstash.pid

# user id to be invoked as
LS_USER=logstash

# location of the logstas jar file
LS_JAR=/opt/logstash/logstash.jar

# logstash home location
LS_HOME=/var/lib/logstash

# logstash log directory
LOG_DIR=<%= node[:logstash][:log_directory] %>

# logstash log file
LOG_FILE=$LOG_DIR/$NAME.log

# logstash configuration directory
CONF_DIR=<%= node[:logstash][:config_directory] %>

# Open file limit
OPEN_FILES=2048

# Nice level
NICE=19

# Set LogStash options
LS_OPTS="--log ${LOG_FILE}"

# Set a home directory
HOME=/var/lib/logstash