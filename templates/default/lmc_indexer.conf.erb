input {
  <% node[:logstash][:server][:input_template_partials].each do |filter| %>
  <%= render "indexer/inputs/#{filter}", cookbook: "cybera_logstash" %>
  <% end %>
}

filter {
  <% node[:logstash][:server][:filter_template_partials].each do |filter| %>
  <%= render "indexer/filters/#{filter}", cookbook: "cybera_logstash", variables: {patterns_dir: @patterns_dir} %>
  <% end %>
}

output {
  stdout {  }
  <% node[:logstash][:server][:output_template_partials].each do |filter| %>
  <%= render "indexer/outputs/#{filter}", cookbook: "cybera_logstash" %>
  <% end %>
}